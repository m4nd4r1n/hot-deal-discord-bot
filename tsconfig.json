{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2022",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
